{
  "name": "caldera",
  "displayName": "Caldera",
  "description": "Real-time pipeline visualization in VS Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "activationEvents": [
    "onView:pipeline.view",
    "onStartupFinished"
  ],
  "main": "./dist/extension/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "pipeline-viewer",
          "title": "Caldera",
          "icon": "$(graph)"
        }
      ]
    },
    "views": {
      "pipeline-viewer": [
        {
          "type": "webview",
          "id": "pipeline.view",
          "name": "Live Preview"
        }
      ]
    }
  },
  "scripts": {
    "clean": "rm -rf dist && rm -rf dist-webview && rm -rf node_modules",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build-webview": "vite build",
    "dev-webview": "vite",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.8",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@types/vscode": "^1.75.0",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "fast-check": "^4.5.3",
    "jest": "^30.2.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  },
  "dependencies": {
    "@types/animejs": "^3.1.13",
    "@types/dagre": "^0.7.53",
    "@types/js-yaml": "^4.0.5",
    "animejs": "^4.3.5",
    "dagre": "^0.8.5",
    "framer-motion": "^12.30.0",
    "html-to-image": "^1.11.11",
    "js-yaml": "^4.1.0",
    "lucide-react": "^0.562.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-icons": "^5.5.0",
    "reactflow": "^11.11.4"
  }
}
